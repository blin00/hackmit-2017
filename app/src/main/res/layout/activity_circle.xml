<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src = "@drawable/circles_background"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/closefriends"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="250dp"
        android:src ="@drawable/closefriends" />

    <ImageView
        android:id="@+id/publiccircle"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="50dp"
        android:src="@drawable/publiccircle" />

    <ImageView
        android:id="@+id/menux"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:src="@drawable/menux" />

    <ImageView
        android:id="@+id/fb"
        android:src="@drawable/fb"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="150dp" />


</FrameLayout>
