<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="eecs.arlocation.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <SurfaceView
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:keepScreenOn="true" />
    </FrameLayout>
    <ImageView
        android:id="@+id/hamburgermenu"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:src="@drawable/hamburgermenu" />
    <ImageView
        android:id="@+id/zhongxia"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="90dp"
        app:srcCompat="@drawable/zhongxia_right" />
    <ImageView
        android:id="@+id/alex"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="170dp"
        app:srcCompat="@drawable/alex_right" />
    <ImageView
        android:id="@+id/brandon"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/brandon_right" />

    <ImageView

        android:id="@+id/alex_target"
        android:layout_width="44dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/alex_plumbob" />


    <ImageView

        android:id="@+id/brandon_target"
        android:layout_width="44dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/plumbob" />
    <ImageView

        android:id="@+id/zhongxia_target"
        android:layout_width="44dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/zhongxia_plumbob" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/distance_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="20 m"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textSize="12sp" />
</LinearLayout>
</FrameLayout>

